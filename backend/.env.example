# ===========================================
# Healthcare Triage System - Environment Config
# ===========================================
# Copy this file to .env and update with your values

# Database Configuration
# For PostgreSQL (production): postgresql://user:password@host:port/database
# For SQLite (development): sqlite:///./healthcare_triage.db
DATABASE_URL=postgresql://postgres:yourpassword@localhost:5432/healthcare_db

# JWT Configuration
# IMPORTANT: Use a strong, unique secret key (min 32 characters)
# Generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-to-a-secure-random-string-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS Configuration (comma-separated origins)
# In production, specify your exact frontend domain(s)
CORS_ORIGINS=https://yourdomain.com,http://localhost:5500

# Environment (development | production)
ENVIRONMENT=production

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Logging Level (DEBUG | INFO | WARNING | ERROR | CRITICAL)
LOG_LEVEL=INFO

# Database Pool Settings (PostgreSQL only)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
